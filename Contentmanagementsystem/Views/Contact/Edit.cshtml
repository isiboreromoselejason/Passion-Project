@model ContactManagementSystem.Models.Contact

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form method="POST" action="/Contact/Edit/@Model.ContactId">
    <input type="hidden" name="ContactId" value="@Model.ContactId" />
    <div>
        <label>Name</label>
        <input type="text" name="Name" value="@Model.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label>Phone Number</label>
        <input type="text" name="PhoneNumber" value="@Model.PhoneNumber" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div>
        <label>Email</label>
        <input type="text" name="Email" value="@Model.Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div>
        <label>Address</label>
        <input type="text" name="Address" value="@Model.Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div>
        <input type="submit" value="Save" />
    </div>
</form>


